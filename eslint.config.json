{
	"ecmaFeatures" : {
		"jsx" : true
	},
	"env" : {
		"browser":true,
		"node": true,
		"jquery": true
	},
	"rules": {
		"quotes": [2, "single"],
		"no-extra-semi" : 1, 
		"no-trailing-spaces": 1,
		"eol-last": 0,
		"no-unused-vars": 0,
		"no-underscore-dangle": 0,
		"no-alert": 0,
		"no-lone-blocks": 0
	},
	"globals" : {
		"jQuery": true,
		"$": true
	}
}